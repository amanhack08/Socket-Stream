<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
     android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/audio_image_recycler_list_view"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_margin="10dp"
        android:src="@mipmap/ic_launcher"
        android:scaleType="centerCrop"/>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_toRightOf="@+id/audio_image_recycler_list_view"
        android:layout_margin="10dp">
        <TextView
            android:id="@+id/song_name_recycler_text_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Song Name"
            android:textSize="18sp"
            android:textColor="@android:color/black"
            />
        <TextView
            android:id="@+id/song_length_recycler_text_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:text="song length"
            android:textSize="16sp"/>
    </LinearLayout>
    <CheckBox
        android:id="@+id/song_checked_recycler_view"
        android:layout_width="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        />

</RelativeLayout>